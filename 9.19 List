# 1. Create a list
my_list = [1, 2, 3, 4, 5] # Creating a list with initial values

# 2. Access list items
first_item = my_list[0] # Accessing the first item in the list
print("First item:", first_item)

# 3. Change list items
my_list[1] = 20 # Changing the second item in the list
print("List after changing second item:", my_list)

# 4. Add list items
my_list.append(6) # Adding an item to the end of the list
print("List after adding an item:", my_list)

# 5. Replace list items
my_list[2] = 30 # Replacing the third item in the list
print("List after replacing third item:", my_list)

# 6. Remove list items
my_list.remove(4) # Removing the item with value 4
print("List after removing an item:", my_list)

# 7. Loop through a list
print("Looping through the list:")
for item in my_list:
    print(item)

# 8. List comprehension
squared_list = [x**2 for x in my_list] # Creating a new list with squared values
print("List comprehension (squared values):", squared_list)

# 9. Sort list
my_list.sort() # Sorting the list in ascending order
print("List after sorting:", my_list)

# 10. Copy list
copied_list = my_list.copy() # Creating a copy of the list
print("Copied list:", copied_list)

# 11. Join lists
another_list = [7, 8, 9]
joined_list = my_list + another_list # Joining two lists
print("Joined list:", joined_list)
