import array

# Create an array of integers
int_array = array.array('i', [1, 2, 3, 4, 5]) # 'i' indicates the type code for signed integers

# Access array elements
print("First element:", int_array[0]) # Access the first element
print("Second element:", int_array[1]) # Access the second element

# Modify array elements
int_array[2] = 10 # Change the third element to 10
print("Modified array:", int_array)

# Add elements to the array
int_array.append(6) # Add an element to the end of the array
print("Array after append:", int_array)

# Remove elements from the array
int_array.remove(2) # Remove the first occurrence of the element 2
print("Array after remove:", int_array)

# Loop through the array
print("Looping through the array:")
for element in int_array:
    print(element)

# Get the length of the array
print("Length of the array:", len(int_array))
