# Define a simple lambda function that adds two numbers
add = lambda x, y: x + y

# Call the lambda function and print the result
result = add(5, 3)
print(f"The sum of 5 and 3 is: {result}")

# Define a lambda function to square a number
square = lambda x: x ** 2

# Call the lambda function and print the result
result = square(4)
print(f"The square of 4 is: {result}")

# Use a lambda function with the map() function to square each number in a list
numbers = [1, 2, 3, 4, 5]
squared_numbers = list(map(lambda x: x ** 2, numbers))
print(f"Squared numbers: {squared_numbers}")

# Use a lambda function with the filter() function to filter out even numbers from a list
even_numbers = list(filter(lambda x: x % 2 == 0, numbers))
print(f"Even numbers: {even_numbers}")

# Use a lambda function with the sorted() function to sort a list of tuples by the second element
tuples = [(1, 2), (3, 1), (5, 4), (2, 3)]
sorted_tuples = sorted(tuples, key=lambda x: x[1])
print(f"Sorted tuples by second element: {sorted_tuples}")

# Define a lambda function to check if a number is positive
is_positive = lambda x: x > 0

# Call the lambda function and print the result
result = is_positive(-1)
print(f"Is -1 positive? {result}")

result = is_positive(5)
print(f"Is 5 positive? {result}")
